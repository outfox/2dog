{
  "$schema": "http://json.schemastore.org/template",
  "author": "outfox",
  "classifications": ["Game", "Godot", "2dog"],
  "identity": "outfox.2dog.Template",
  "name": "2dog Application",
  "shortName": "2dog",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Company.Product1",
  "guids": [
    "B1A2C3D4-E5F6-4A7B-8C9D-0E1F2A3B4C5D",
    "D5E6F7A8-B9C0-4D1E-2F3A-4B5C6D7E8F9A",
    "C6D7E8F9-A0B1-4C2D-3E4F-5A6B7C8D9E0F"
  ],
  "preferNameDirectory": true,
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "rawName": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "identity",
      "replaces": "TPLRAWNAME"
    },
    "twodogVersion": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "0.0.0-tpl",
      "replaces": "TWODOG_PKG_VERSION",
      "description": "Version of 2dog packages to reference."
    },
    "nativesVersion": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "0.0.0-ntpl",
      "replaces": "NATIVES_PKG_VERSION",
      "description": "Version of native platform packages to reference."
    },
    "tests": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, includes a test project with xUnit and twodog.xunit fixtures.",
      "defaultValue": "false"
    },
    "editor": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, includes an editor project for importing Godot resources.",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!tests)",
          "exclude": [
            "Company.Product1.Tests/**/*"
          ]
        },
        {
          "condition": "(!editor)",
          "exclude": [
            "Company.Product1.Editor/**/*"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "Company.Product1.sln"
    },
    {
      "path": "Company.Product1/Company.Product1.csproj"
    },
    {
      "condition": "(tests)",
      "path": "Company.Product1.Tests/Company.Product1.Tests.csproj"
    },
    {
      "condition": "(editor)",
      "path": "Company.Product1.Editor/Company.Product1.Editor.csproj"
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
