<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageType>Template</PackageType>
        <PackageId>2dog.Templates</PackageId>
        <Title>2dog Project Templates</Title>
        <Authors>Moritz Voss</Authors>
        <PackageIcon>icon.png</PackageIcon>
        <Description>Templates for creating 2dog applications that embed Godot Engine in .NET</Description>
        <PackageTags>dotnet-new;templates;godot;2dog;game-engine</PackageTags>
        <PackageProjectUrl>https://github.com/outfox/2dog</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/outfox/2dog</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageVersion>$(TwoDogVersion)</PackageVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <TargetFramework>net8.0</TargetFramework>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <NoDefaultExcludes>true</NoDefaultExcludes>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <IsPackable>true</IsPackable>
        <PackageOutputPath>../packages</PackageOutputPath>

        <!-- Disable compilation of template content -->
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
        <EnableDefaultItems>false</EnableDefaultItems>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="twodog/**/*" Exclude="twodog/**/bin/**;twodog/**/obj/**">
            <PackagePath>content/twodog/</PackagePath>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Include="../nuget/icon.png" Pack="true" PackagePath="icon.png" Visible="false"/>
        <None Include="README.md" Pack="true" PackagePath="/" />
    </ItemGroup>

    <!-- Substitute 2dog package version into template.json at pack time -->
    <UsingTask TaskName="SubstituteInFile" TaskFactory="RoslynCodeTaskFactory"
               AssemblyFile="$(MSBuildToolsPath)/Microsoft.Build.Tasks.Core.dll">
        <ParameterGroup>
            <FilePath ParameterType="System.String" Required="true" />
            <Find ParameterType="System.String" Required="true" />
            <ReplaceWith ParameterType="System.String" Required="true" />
        </ParameterGroup>
        <Task>
            <Code Type="Fragment" Language="cs">
                var text = File.ReadAllText(FilePath);
                File.WriteAllText(FilePath, text.Replace(Find, ReplaceWith));
            </Code>
        </Task>
    </UsingTask>

    <Target Name="SubstituteTemplateVersion" BeforeTargets="GenerateNuspec">
        <SubstituteInFile
            FilePath="twodog/.template.config/template.json"
            Find="0.0.0-tpl"
            ReplaceWith="$(TwoDogVersion)" />
    </Target>

    <Target Name="RestoreTemplateVersion" AfterTargets="Pack">
        <SubstituteInFile
            FilePath="twodog/.template.config/template.json"
            Find="$(TwoDogVersion)"
            ReplaceWith="0.0.0-tpl" />
    </Target>
</Project>
