<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageType>Template</PackageType>
        <PackageId>2dog.Templates</PackageId>
        <Title>2dog Project Templates</Title>
        <Authors>OutFox</Authors>
        <Description>Templates for creating 2dog applications that embed Godot Engine in .NET</Description>
        <PackageTags>dotnet-new;templates;godot;2dog;game-engine</PackageTags>
        <PackageProjectUrl>https://github.com/outfox/2dog</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/outfox/2dog</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageVersion>0.1.0-pre</PackageVersion>
        <TargetFramework>net8.0</TargetFramework>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <IsPackable>true</IsPackable>
        <PackageOutputPath>../packages</PackageOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="twodog/**/*" Exclude="twodog/**/bin/**;twodog/**/obj/**">
            <PackagePath>content/twodog/</PackagePath>
        </Content>
    </ItemGroup>
</Project>
