<Project Sdk="Microsoft.NET.Sdk">
    <!-- Meta package that combines all Linux x64 variants -->
    <!-- Only builds/packs on Linux -->
    <PropertyGroup Condition="'$(ForcePackAllPlatforms)' != 'true' And !$([MSBuild]::IsOSPlatform('Linux'))">
        <IsPackable>false</IsPackable>
        <ExcludeFromBuild>true</ExcludeFromBuild>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>2dog.linux-x64</PackageId>
        <Description>Linux x64 meta package for twodog. Includes release, debug, and editor native libraries. Reference this package alongside twodog for complete Linux support.</Description>
        <IsPackable>true</IsPackable>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <!-- Use custom nuspec for explicit dependency control -->
        <NuspecFile>twodog.linux-x64.nuspec</NuspecFile>
        <NuspecProperties>version=$(Version);authors=$(Authors);description=$(Description)</NuspecProperties>
    </PropertyGroup>

    <!-- Project references for local development builds -->
    <ItemGroup Condition="'$(ExcludeFromBuild)' != 'true'">
        <ProjectReference Include="twodog.linux-x64.release.csproj" PrivateAssets="all"/>
        <ProjectReference Include="twodog.linux-x64.debug.csproj" PrivateAssets="all"/>
        <ProjectReference Include="twodog.linux-x64.editor.csproj" PrivateAssets="all"/>
    </ItemGroup>
</Project>
